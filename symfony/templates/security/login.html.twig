{% extends 'base.html.twig' %}
{% block title %}Sign in!{% endblock %}
{% block body %}
    <div class="mt-5 col-md-4 offset-md-3">
        {% if error %}
            <div class="red-text">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('login') }}" method="post">

            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_email }}"
                       required="required" autocomplete="username"/>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" name="_password" required="required"
                       autocomplete="current-password"/>
            </div>

            <input class="btn btn-primary" type="submit" id="_submit" name="_submit"
                   value="sign in"/>
        </form>

